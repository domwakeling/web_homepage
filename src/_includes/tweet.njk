{%- if environment=="DEVELOPMENT" -%}
    {% set twitter = dummy_tweets %}
{% else %}
    {% set twitter = tweets %}
{%- endif -%}

<img class="tweet_user" src="{{ twitter.imgurl }}" />
<h2>{{ twitter.screen_name }}</h2>
<hr class="tweet_hr" />
{%- for item in twitter.tweets -%}
    <h3 class="tweet_date">{{ item | datefromtweet }}</h3>
    {%- if item.entities.media[0].media_url_https -%}
        <img src="{{ item.entities.media[0].media_url_https }}" class="tweet_img" />
    {%- elseif item.entities.media[0].media_url -%}
        <img src="{{ item.entities.media[0].media_url }}" class="tweet_img" />
    {%- endif -%}
    <p>{{ item | tweetbodytext | safe}}</p>
    <div style="clear: both"></div>
    {# <p>{{ item | stringify }} #}
    <hr class="tweet_hr" />
{%- endfor -%}