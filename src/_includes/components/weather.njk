{% set weather = openweathermap %}
<div class="panel grid-item" id="weather">
    <h2>Weather</h2>  
    <table style="margin: 0 auto 1.0rem;" id="football_table">
        <tr>
            <th colspan=2 style="text-align: right;">High</th>
            <th>Low</th>
            <th colspan=2 style="text-align: center">Forecast</th>
        </tr>
        {%- for item in weather.daily -%}
        <tr>
            <td>{{ item.dt | weekdayfromutc }}</td>
            <td>{{ item.temp.max | rounddecimal }}&deg;</td>
            <td>{{ item.temp.min | rounddecimal }}&deg;</td>
            <td>{{ item.weather[0].main }}</td>
            <td>
                {% weatherImage item.weather[0].icon, item.weather[0].description %}
            </td>
        </tr>
        {%- endfor -%}
    </table>
</div>
