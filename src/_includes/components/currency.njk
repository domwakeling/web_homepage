{% set ratedata = currency %}
<div class="panel grid-item" id="currency">
    <h2>Exchange Rates</h2>
    <table style="margin: 0 auto 1.0rem;">
        <tr>
            {%- for item in ratedata -%}
            <th>
                {% flagImage item.flag.src, item.alt %}
            </th>
            {%- endfor -%}
        </tr>
        <tr>
            {%- for item in ratedata -%}
            <td style="text-align:center">{{ item.symbol | safe}}{{ item.rate}}</td>
            {%- endfor -%}
        </tr>
    </table>
    <p style="text-align:center"><i>based on data from the European Central Bank</i></p>
</div>